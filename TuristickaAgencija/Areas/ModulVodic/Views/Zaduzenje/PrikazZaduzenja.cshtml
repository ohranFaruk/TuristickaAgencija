
@{
    ViewData["Title"] = "PrikazZaduzenja";
    int rBroj = 1;
    Layout = "_VodicLayout";
}
@model TuristickaAgencija.Areas.ModulVodic.Models.ZaduzenjePrikazVM

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


<script src="~/MyScript.js"></script>


<style>
    td {
        background-color: rgb(243,243,244);
    }


    #frame {
        width: 100%;
        height: 85vh;
    }



    #listPonude {
        width: 100%;
        height: 90%;
    }
</style>
<div id="frame">

    <table id="ponudaTable" class="table table-hover">
        <thead>
            <tr>
                <th>RBr.</th>
                <th>Destinacija</th>
                <th>Datum polaska</th>
                <th>Datum povratka</th>
                <th>Broj putnika</th>
                <th>Opis</th>
                <th>Zahtjev za odgodu</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model.redovi)
            {
                <tr>
                    <td>@(rBroj++).</td>
                    <td>@x.nazivPutovanja</td>
                    <td>@x.datumPolaska</td>
                    <td>@x.datumPovratka</td>

                    <td>@x.trenutnoTurista</td>
                    <td>@x.opis</td>

                    @if (x.naCekanju)
                    {
                        <td>zahjev poslan</td>
                    }
                    else
                    {
                        <td>
                            <button ajax-poziv="da" ajax-rezultat="zahtjevAjax" ajax-url="/modulvodic/zahtjev/index?zaduzenjeId=@x.zaduzenjeId">Posalji zahtjev za odgodu</button>
                        </td>
                    }

                </tr>

            }
        </tbody>


    </table>

    <div id="zahtjevAjax">


    </div>


    </div>
