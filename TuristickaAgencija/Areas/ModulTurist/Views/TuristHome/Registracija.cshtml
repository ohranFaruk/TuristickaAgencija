@using TuristickaAgencija
@using TuristickaAgencija.Data.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = null;

}
@model TuristickaAgencija.Areas.ModulTurist.Models.RegistracijaVM
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>World Tour Travel Agency | Prijava</title>

    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="font-awesome/css/font-awesome.css" rel="stylesheet">


    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <style>


        input[type=text], input[type=password],input[type=datetime] {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            outline: none;
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid #DDDDDD;
        }

            input[type=text]:focus, input[type=password]:focus, input[type=datetime]:focus {
                box-shadow: 0 0 5px rgba(81, 203, 238, 1);
                padding: 3px 0px 3px 3px;
                margin: 5px 1px 3px 0px;
                border: 1px solid rgba(81, 203, 238, 1);
            }









        .dugme {
            -moz-box-shadow: 0px 1px 0px 0px #f0f7fa;
            -webkit-box-shadow: 0px 1px 0px 0px #f0f7fa;
            box-shadow: 0px 1px 0px 0px #f0f7fa;
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #33bdef), color-stop(1, #019ad2));
            background: -moz-linear-gradient(top, #33bdef 5%, #019ad2 100%);
            background: -webkit-linear-gradient(top, #33bdef 5%, #019ad2 100%);
            background: -o-linear-gradient(top, #33bdef 5%, #019ad2 100%);
            background: linear-gradient(to bottom, #33bdef 5%, #019ad2 100%);
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#33bdef', endColorstr='#019ad2',GradientType=0);
            background-color: #33bdef;
            -moz-border-radius: 6px;
            -webkit-border-radius: 6px;
            border-radius: 6px;
            border: 1px solid #057fd0;
            cursor: pointer;
            color: #ffffff;
            font-family: Arial;
            font-size: 15px;
            font-weight: bold;
            padding: 6px 24px;
            text-decoration: none;
            text-shadow: 0px -1px 0px #5b6178;
            width: 100%;
        }

            .dugme:hover {
                background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #019ad2), color-stop(1, #33bdef));
                background: -moz-linear-gradient(top, #019ad2 5%, #33bdef 100%);
                background: -webkit-linear-gradient(top, #019ad2 5%, #33bdef 100%);
                background: -o-linear-gradient(top, #019ad2 5%, #33bdef 100%);
                background: -ms-linear-gradient(top, #019ad2 5%, #33bdef 100%);
                background: linear-gradient(to bottom, #019ad2 5%, #33bdef 100%);
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#019ad2', endColorstr='#33bdef',GradientType=0);
                background-color: #019ad2;
            }

            .dugme:active {
                position: relative;
                top: 1px;
            }


        #datumcic {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            outline: none;
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid #DDDDDD;
        }

        #datumcic:focus {
            box-shadow: 0 0 5px rgba(81, 203, 238, 1);
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid rgba(81, 203, 238, 1);
        }


        #drop2,#drop1 {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            outline: none;
            padding: 3px 0px 3px 3px;
            margin: 5px 1px 3px 0px;
            border: 1px solid #DDDDDD;
        }

            #drop2:focus,#drop1:focus {
                box-shadow: 0 0 5px rgba(81, 203, 238, 1);
                padding: 3px 0px 3px 3px;
                margin: 5px 1px 3px 0px;
                border: 1px solid rgba(81, 203, 238, 1);
            }




    </style>

   

</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>


                <h1 class="logo-name">WT</h1>

            </div>
            <h3>World Tour Travel Agency</h3>

            <p>Prijavite se da iskusite sve mogućnosti</p>


            <form action="/ModulTurist/TuristHome/SaveAsync" method="post" class="m-t" id="formica" >


                <div class="form-group">
                    <input asp-for="ime" class="form-control" placeholder="Ime" />
                    <span asp-validation-for="ime" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <input asp-for="prezime" class="form-control" placeholder="Prezime" />
                    <span asp-validation-for="prezime" class="text-danger"></span>
                </div>





                <div class="form-group">
                    <input asp-for="lozinka" class="form-control" placeholder="Lozinka" />
                    <span asp-validation-for="lozinka" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input asp-for="ponovljenaLoznika" class="form-control" placeholder="Ponovljena Loznika" />
                    <span asp-validation-for="ponovljenaLoznika" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input asp-for="email" class="form-control" placeholder="Email" id="mejl" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input asp-for="JMBG" class="form-control" placeholder="JMBG" />
                    <span asp-validation-for="JMBG" class="text-danger"></span>
                </div>





                <div class="form-group">
                    <input asp-for="Telefon" class="form-control" placeholder="Telefon" />

                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <input asp-for="DatumRodjenja" class="form-control" placeholder="Datum Rođenja" id="datumcic" />
                    <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input asp-for="Adresa" class="form-control" placeholder="Adresa" />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>



                <div class="form-group">
                    @Html.DropDownListFor(Model => Model.spol, Model.spol, new {id="drop1", @class = "form-control" })
                    <span asp-validation-for="spol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.DropDownListFor(Model => Model.gradId, Model.gradovi, new {id="drop2", @class = "form-control" })
                    <span asp-validation-for="gradId" class="text-danger" id="span2"></span>
                </div>




                <button type="submit" class="dugme" onclick="return validacija();">Registriraj se</button>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->



</body>
</html>

<script>





</script>