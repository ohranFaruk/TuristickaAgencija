
@{
    ViewData["Title"] = "Dodaj";
    Layout = "_ZaposlenikLayout";
}
@model TuristickaAgencija.Areas.ModulZaposlenik.Models.PonudaDodajVM
<style>
    form {
        width:35%;
        margin: 0 auto;
    }
</style>
<form asp-action="Dodaj" asp-controller="Ponuda" method="post">
    <div class="form-group">
        <label>Naziv: </label>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label>Početak: </label>
        <input asp-for="pocetak" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kraj: </label>
        <input asp-for="kraj" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Snimi" class="btn btn-success" />
        @Html.ActionLink("Odustani", "Index", "Ponuda", null, new {@class="btn btn-danger" })
    </div>
</form>
