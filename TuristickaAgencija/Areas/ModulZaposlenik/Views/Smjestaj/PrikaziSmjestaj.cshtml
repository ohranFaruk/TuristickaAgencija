@model TuristickaAgencija.Areas.ModulZaposlenik.Models.SmjestajIndexVM
@{ 
    int brojac = 1;
}
<style>
    #smjestaji td {
        background-color: rgb(243,243,244);
        padding:0.3%;
    }
    #smjestaji th {
        padding: 1% 0;
    }
    .rbr {
        width:10%;
    }
    .naziv {
        width:45%;
    }
    .zvizda {
        width:35%;
    }

</style>


<table id="smjestaji" class="table table-hover">
    <thead>
        <tr>
            <th>RBr.</th>
            <th>Hotel</th>
            <th>Zvjezdice</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.divs)
        {
            <tr>
                <td class="rbr">@(brojac++).</td>
                <td class="naziv">@x.nazivHotela</td>
                <td class="zvizda">@x.brojZvjezdica</td>
                <td>
                    @Html.ActionLink("Pregled", "Pregled", "Smjestaj", new { area = "ModulZaposlenik", smjestajId = x.smjestajId }, new { @class = "btn btn-warning btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#smjestaji").DataTable({
            "pageLength": 5,
            "bLengthChange": false,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Croatian.json",
            },
        });

    });
</script>