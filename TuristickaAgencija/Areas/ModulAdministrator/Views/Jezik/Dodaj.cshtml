@model TuristickaAgencija.Areas.ModulAdministrator.Models.JezikDodajVM

<h3>Evidencija novog govornog jezika</h3>
<hr />
<form ajax-poziv="da" ajax-rezultat="govorniJezici" action="/ModulAdministrator/Jezik/Dodaj" method="post">
    <input asp-for="zaposlenikId" hidden />
    <label>Jezik / Stepen</label>
    <div class="form-group">
        @MyHtmlTag.DoubleDropDown("jezikId", "stepenJezika", Model.jezici, Model.stepeniJezika, "form-control")
        <span asp-validation-for="jezikId" class="text-danger"></span>&nbsp;&nbsp;&nbsp;
        <span asp-validation-for="stepenJezika" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Snimi" class="btn btn-success btn-sm" />
        <button class="btn btn-danger btn-sm" ajax-poziv="da" ajax-rezultat="govorniJezici" ajax-url="/ModulAdministrator/Jezik/Index?zaposlenikId=@Model.zaposlenikId">Odustani</button>
    </div>
</form>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
